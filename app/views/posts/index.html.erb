                </ul>
            </div>
        </div>
        
        <hr>
        <div class="homepage_content">
          <hr>
          		<h2>Tüm Yazılar</h2>
                  <hr>
                   <% @posts.each do |post| %>
                      <%= link_to post.title, post,class:'date' %><br>
                  <%end%> 
          </div>
          <hr>
        
	    </div>  
	  </div>
	  
  </div>
</div>

